<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>cli</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <baseDirectory>conditus-${project.version}</baseDirectory>
  <files>
    <file>
      <source>./src/main/assembly/conditus.sh</source>
      <fileMode>755</fileMode>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
    </file>
    <file>
      <source>./src/main/assembly/conditus.cmd</source>
      <lineEnding>windows</lineEnding>
      <filtered>true</filtered>
    </file>
    <file>
      <source>./src/main/assembly/release.json</source>
      <outputDirectory>conf</outputDirectory>
    </file>
    <file>
      <source>./src/main/assembly/config.json</source>
      <outputDirectory>conf</outputDirectory>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>libs</outputDirectory>
    </dependencySet>
  </dependencySets>

</assembly>